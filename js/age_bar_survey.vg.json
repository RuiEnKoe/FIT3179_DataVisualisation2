{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "",
    "width": 420,
    "height": 500,
    
    "data": {
        "url": "https://raw.githubusercontent.com/RuiEnKoe/FIT3179_DataVisualisation2/refs/heads/main/data/followers_by_age_survey_2022.csv"
    },

    "mark": {
        "type": "bar",
        "tooltip": true,
        "cursor": "pointer",
        "stroke": "black"
    },

    "encoding": {
        "y": { 
            "field": "num_followers_age", 
            "type": "quantitative",
            "title": "Number of followers",
            "axis":{
                "grid": false
            }
        },
        
        "x": {
            "field": "age_group", 
            "type": "ordinal",
            "title": "Age Group",
            "axis":{
                "labelAngle": 0,
                "grid": false
            }
        },

        "fillOpacity":{
            "condition": {
                "param": "select",
                "value": 1
            },
            "value": 0.3
        },

        "strokeWidth":{
            "condition": [
                {
                    "param": "select",
                    "empty": false,
                    "value": 2
                },

                {
                    "param": "highlight",
                    "empty": false,
                    "value": 1
                }
            ],
            
            "value": 0
        },

        "color":{
            "field": "age_group",
            "type": "nominal",
            "title": "Age Group",
            "scale": {
                "range": ["#756bb1", "#bdbdbd","#bdbdbd","#bdbdbd","#bdbdbd", "#dbdbd"]
            },
            "legend": null
        },

        "tooltip": [
            {
                "field": "num_followers_age",
                "type": "quantitative",
                "title": "Number of followers"
            },

            {
                "field": "percentage_age",
                "type": "quantitative",
                "title": "Percentage of followers(%)"
            },

            {
                "field": "age_group",
                "type": "ordinal",
                "title": "Age Group"
            }
        ]
    },

   "config": {
        "scale": {
            "bandPaddingInner": 0.2
        },
        "axisX":
        {
            "domainColor": "black"
        },

        "axisY":
        {
            "domainColor": "black"
        }

   },
    
    "params": [
        {
            "name": "highlight",
            "select": {
                "type": "point",
                "on": "pointerover"
            }
        },

        {
            "name": "select",
            "select": "point"
        }
    ]
}