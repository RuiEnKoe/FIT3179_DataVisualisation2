{
"$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": "Search Popularity of BTS Among KPOP Groups (Jan 2023-Aug 2024)",
    "width": 550,
    "height": 550,

    "data" :{"url": "https://raw.githubusercontent.com/RuiEnKoe/FIT3179_DataVisualisation2/refs/heads/main/data/bts_kpop_search_trend_long.csv"},

    "encoding": {
        "x": {
            "timeUnit": "yearmonthdate",
            "field": "Week",
            "type": "temporal",
            "axis": {
                "title": "Year",                
                "grid": false
            }
        },

        "tooltip": [
        {
                "field": "BTS",
                "type": "quantitative"
        },

        {
                "field": "EXO",
                "type": "quantitative"
        },
            
        {
                "field": "BLACKPINK",
                "type": "quantitative"
        },

        {
                "field": "TWICE",
                "type": "quantitative"
        },

        {
                "field": "SEVENTEEN",
                "type": "quantitative"
        },

        {
                "field": "Week",
                "type": "temporal"
        }
        ] 
    },

    "layer": [
        {
            "encoding": {
                "y": {
                    "field": "search_popularity_trends",
                    "type": "quantitative",
                    "title": "Search Interest Value",
                    "axis": {
                        "grid": false,
                        "title": "Search Interest Value"
                    },
                    "scale": {
                        "domain": [0, 110]
                    }
                },

                "color": {
                    "field": "artist",
                    "type": "nominal",
                    "scale": {
                        "range": ["#fc68dc", "#6a3d9a", "#837651", "#92a8d1", "#fdb3a5"]
                    }
                }
            },

            "layer": [
                {
                    "mark": "line"
                },

                {
                "transform":[
                        {
                        "filter": {
                            "param": "hover",
                            "empty": false
                            }
                        }
                    ], 
                    "mark": "point"
                }
            ]
        },
        
        {
            "transform": [
                {
                    "pivot": "artist", 
                    "value": "search_popularity_trends", 
                    "groupby": ["Week"]
                }
            ],

            "mark": "rule",
            "encoding": 
            {
                "opacity": {
                    "condition": {
                        "value": 0.5, 
                        "param": "hover", 
                        "empty": false
                    },
                    "value": 0
                }
            },

            "params": [
                {
                    "name": "hover",
                    "select": {
                        "type": "point",
                        "fields": ["Week"],
                        "nearest": true,
                        "on": "mouseover",
                        "clear": "mouseout"
                    }
                }
            ]
        }    
    ],

    "config": {
        "axisX": {
            "minExtent": 20
        }
    }
}
